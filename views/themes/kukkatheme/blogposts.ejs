<%= include header.ejs %>

<div class="container-fluid">
  <%
  if(blog.name ||Â blog.description) {
  %>
    <div class="hero-unit">
      <%
      if(blog.name) {
      %>
        <h1><%=blog.name%></h1>
      <%
      }
      if(blog.description) {
      %>
        <p><%=blog.description%></p>
      <%
      }
      %>
    </div>
  <%
  }
  %>

  <div class="row-fluid">
    <div class="span8">
    <%
    data.forEach(function(data, i) {
    %>
      <div class="blog-post">
        <h2><a href="/<%=data.url%>"><%=data.title%></a></h2>
        <p>
          <small class="muted"><%=moment(data.added).fromNow()%></small>
        </p>
        <p>
          <%-data.content.replace(/\n/g, "<br />")%>
        </p>
      </div>
        <div class="addthis_toolbox addthis_default_style ">
        <a class="addthis_button_facebook_like" fb:like:layout="button_count" addthis:url="http://<%=blog.url%>.<%=domain%>/<%=data.url%>" addthis:title="<%=data.title%>"></a>
        <a class="addthis_button_tweet" addthis:url="http://<%=blog.url%>.<%=domain%>/<%=data.url%>" addthis:title="<%=data.title%>"></a>
        <a class="addthis_button_pinterest_pinit" addthis:url="http://<%=blog.url%>.<%=domain%>/<%=data.url%>" addthis:title="<%=data.title%>"></a>
        <a class="addthis_counter addthis_pill_style" addthis:url="http://<%=blog.url%>.<%=domain%>/<%=data.url%>" addthis:title="<%=data.title%>"></a>
        </div>

      <%
      });
      %>
    </div>

    <div class="span4">
      <%= include sidebar.ejs %>
    </div>
  </div> <!-- row-fluid -->

  <ul class="pager">
    <li class="previous disabled">
      <a href="#">&larr; Tuoreemmat</a>
    </li>
    <li class="next">
      <a href="#">Vanhemmat &rarr;</a>
    </li>
  </ul>

</div> <!-- container -->

<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=<%=blog.addthis%>"></script>
<%= include footer.ejs %>