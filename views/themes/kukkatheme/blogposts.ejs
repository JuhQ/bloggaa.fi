<%= include header.ejs %>

<div class="container-fluid">

    <div class="hero-unit">
        <p>Blogin otsikko (myös titlen loppuosa)</p>
        <p>Blogin esittelyteksti (myös blogin etusivun description)</p>
    </div>

    <div class="row-fluid">
      <div class="span8">
<%
data.forEach(function(data, i) {
%>
       <div class="blog-post">

  <h2><a href="/<%=data.url%>"><%=data.title%></a></h2>
  <p>
    <small class="muted"><%=moment(data.added).fromNow()%></small>

  </p>
  <p>
    <%-data.content.replace("\n", "<br />")%>
  </p>

  </div>
<%
});
%>

      </div>

      <div class="span4">

<%= include sidebar.ejs %>

      </div>

    </div> <!-- row-fluid -->

</div> <!-- container -->

<%= include footer.ejs %>