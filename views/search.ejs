<%= include header.ejs %>

<div class="container">
  <%
  data.forEach(function(row, i) {
  %>
    <div class="row">
      <div class="span8">
        <h1><a href="http://<%=row.subdomain%>.<%=domain%>/<%=row.url%>"><%=row.title%></a></h1>
        <p>
          <%-row.content.replace("\n", "<br />")%>
        </p>
      </div>
    </div>
    <%
    if(row.tags) {
      %><p><%
      var tags = row.tags.split(",");
      tags.forEach(function(tag) {
      %>
        <a href="http://<%=domain%>/tag/<%=encodeURIComponent(tag)%>"><%=tag%></a>
      <%
      });
      %></p><%
    }
    %>
  <%
  });
  %>
</div>

<%= include footer.ejs %>